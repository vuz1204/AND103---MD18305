<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="185dp"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp">

        <ImageView
            android:id="@+id/imgSanPham"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/tvTenSanPham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgSanPham"
            android:layout_alignParentStart="true"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTenCongTy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTenSanPham"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="20dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvGia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTenCongTy"
            android:layout_alignParentStart="true"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imgBuy"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@id/tvGia"
            android:layout_alignParentEnd="true"
            android:src="@drawable/icon_cart" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
